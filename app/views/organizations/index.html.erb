<% @organizations.each do |organization| %>
  <div class="row org-row">
    <div class="two_thirds">
      <h3><%= organization.name %></h3>
      <p><%= organization.description %></p>
      <%= organization.website %>
    </div>
    <div class="one_third">
      <h3>Actions</h3>
      <%= link_to 'Show', organization %><br>
      <%= link_to 'Edit', edit_organization_path(organization) %><br>
      <%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
<% end %>

<br />

<%= link_to 'New Organization', new_organization_path, class: "btn" %>
